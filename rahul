name: Deploy static website on S3

on:
  pull_request:
    branches:
      - development
    types: [closed]

permissions:
  id-token: write
  contents: read

jobs:
  deploy:
    if: github.event.pull_request.merged == true
    runs-on: ubuntu-latest
    steps:
      - name: Get Code
        uses: actions/checkout@v3

      - name: Configure AWS Credentials
        uses: aws-actions/configure-aws-credentials@v2
        with:
          role-to-assume: ${{ secrets.AWS_ROLE_TO_ASSUME }}
          aws-region: ${{ VARS.AWS_REGION }}

      - name: Build App
        run: |
          npm install 
          npm run build

      - name: Upload to S3
        run: aws s3 sync build s3://${{ VARS.S3_BUCKET_NAME }}/
